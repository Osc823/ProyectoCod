 <script>
    // Obtén los datos del usuario
    var userData = {
      name: '{{user.name}}',
      email: '{{user.email}}',
      age: '{{user.age}}'
    };

    // Muestra SweetAlert con los datos del usuario al cargar la página
    window.onload = function() {
      showAlert(userData);
    };

    // Función para mostrar SweetAlert con los datos del usuario
    function showAlert(user) {
      Swal.fire({
        title: 'Datos del Usuario',
        html: `<p><strong>Nombre:</strong> ${user.name}</p>
               <p><strong>Email:</strong> ${user.email}</p>
               <p><strong>Edad:</strong> ${user.age}</p>`,
        confirmButtonText: 'Cerrar'
      });
    }
